@using PhilsWebsite.ViewModels;

@model ContactViewModel;

<!--binds contact viewmodel with the form-->



<div class="container">

    <div class="row">
        <div class="col-sm-6">
            <h1>Contact Me</h1>
        </div>
        <div class="contact-form">
            <form asp-controller="Home" asp-action="Contact" method="post" role="form">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-type="text" class="form-control" id="name" placeholder="Your name" name="name">
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email Address</label>
                    <input type="text" class="form-control" id="email" placeholder="name@example.com" name="emailddress">
                </div>
                <div class="form-group">
                    <label asp-for="Message">Message</label>
                    <textarea class="form-control" id="message" rows="3" name="message"></textarea>
                </div>
                <div>
                    <input type="submit" value="Send email" />
                </div>
            </form>
        </div>

    </div>
</div>